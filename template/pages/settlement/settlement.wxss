/* pages/settlement.wxss */
.receipt-main-box{
  padding: 20rpx 15rpx 20rpx 15rpx;
  border-radius: 20rpx;
}
.receipt-main-text-tips{
  padding-top: 20rpx;
  padding-bottom: 30rpx;
  font-size: 40rpx;
  color: #858687;
}
.receipt-time-box{
  margin-top:30rpx;
  padding: 0 10rpx;
}
.receipt-time-main{
  display: flex;
  justify-content: space-between;
}
.receipt-time-tips{
  font-size: 25rpx;
  color:var(--olive);
  margin-top: 20rpx;
}
.commodity-box {
  margin: 0 30rpx 0 30rpx;
  border-radius: 20rpx;
  padding: 0 15rpx 0 25rpx;
}
.commodity-list-title{
  padding: 20rpx 0 20rpx 0;
  color: #656667;
}
.commodity-list-box{
  padding: 20rpx 0 5rpx 0;
}
.commodity-list-item{
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.commodity-item-left{
  display: flex;
}
.commodity-item-left-img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}
.commodity-item-left-text{
  margin-left: 15rpx;
}
.commodity-item-left-text-name{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.commodity-list-box-b{padding-bottom: 10rpx;}
.commodity-item-left-text-fenliang{
  font-size: 24rpx;
  color: #999;
}
.commodity-item-left-text-quantity{
  font-size: 24rpx;
  color: #999;
}
.commodity-item-price{
  font-size: 40rpx;
  color: #333;
}
.delivery-box{
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
}
.delivery-tips{
  font-size: 22rpx;
  margin-left: 20rpx;
  color: #999;
}